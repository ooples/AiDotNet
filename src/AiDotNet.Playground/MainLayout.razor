<style>
    :root {
        --primary-color: #6366f1;
        --primary-dark: #4f46e5;
        --bg-dark: #0f172a;
        --bg-darker: #020617;
        --bg-card: #1e293b;
        --text-primary: #f8fafc;
        --text-secondary: #94a3b8;
        --border-color: #334155;
        --success-color: #22c55e;
        --error-color: #ef4444;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body, #app {
        height: 100%;
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: var(--bg-dark);
        color: var(--text-primary);
    }

    .playground-layout {
        display: flex;
        flex-direction: column;
        height: 100vh;
    }

    .playground-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 24px;
        height: 60px;
        background: var(--bg-darker);
        border-bottom: 1px solid var(--border-color);
    }

    .header-brand {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 1.25rem;
        font-weight: 600;
    }

    .brand-icon {
        font-size: 1.5rem;
    }

    .header-nav {
        display: flex;
        gap: 24px;
    }

    .nav-link {
        color: var(--text-secondary);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s;
    }

    .nav-link:hover {
        color: var(--primary-color);
    }

    .playground-main {
        flex: 1;
        overflow: hidden;
    }

    .playground-footer {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 16px;
        padding: 12px 24px;
        background: var(--bg-darker);
        border-top: 1px solid var(--border-color);
        font-size: 0.85rem;
        color: var(--text-secondary);
    }

    .playground-footer a {
        color: var(--primary-color);
        text-decoration: none;
    }

    .playground-footer a:hover {
        text-decoration: underline;
    }
</style>
